{
    "name": "realodix/next-project",
    "description": "NextProject",
    "license": "MIT",
    "type": "library",
    "authors": [{"name": "Budi Hermawan", "role": "Developer"}],
    "homepage": "https://github.com/realodix/next-project",
    "require": {
        "php": "^8.0",
        "illuminate/collections": "^9.19",
        "illuminate/support": "^9.19",
        "symfony/polyfill-php81": "^1.26"
    },
    "require-dev": {
        "fakerphp/faker": "^1.19",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17.0",
        "realodix/relax": "dev-main",
        "vimeo/psalm": "^4.24"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Realodix\\NextProject\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\NextProject\\Test\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@sa",
            "@test"
        ],
        "cs": "./vendor/bin/php-cs-fixer fix -v",
        "sa": "./vendor/bin/psalm",
        "test": "./vendor/bin/phpunit"
    }
}
